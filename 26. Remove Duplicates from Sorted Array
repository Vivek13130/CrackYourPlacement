class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
        // the straight up approach that came in my mind - two pointers : 
        int count = 1 ;
        int i = 1 ;// only move forward when it is greater than the element behind it 

        // setting up i ; 

        while(i < nums.size() && nums[i] > nums[i-1]){
            i++;
            count++;
        }

        int j = i + 1; 

        while(j < nums.size()){
            if(nums[j] > nums[i-1]){
                nums[i] = nums[j];
                i++;
                j++;
                count++;
            }
            else j++;
        }

        return count;
    }
};
