class Solution {
public:
    bool check(int i , int j , string& s){
        while(i <= j){
            if(s[i] == s[j]){
                i++; 
                j--;
            }
            else return false;
        }
        return true;
    }

    bool validPalindrome(string s) {
        bool skip = true; // we can only skip one charac
        // now the main problem is which one left one or right one ? 
        // we gonna check both 

        int i = 0 , j = s.length()-1;
        while(i < j){
            if(s[i] == s[j]){
                i++;
                j--;
            }
            else{
                return check(i+1, j ,s) || check(i , j-1 ,s);
            }
        }
        return true;
    }
};
