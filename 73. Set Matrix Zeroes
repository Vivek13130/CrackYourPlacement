class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        // o(mn) is quite easy - make another matrix and do everything as said 
        // o(m + n) - make two matrix to stroe the row and column to set as 0 

        bool toprow = false;
        bool leftcol = false;

        int m = matrix.size(); // row size
        int n = matrix[0].size(); // col size

        // checking top row
        for(int i = 0 ; i<n ; i++){
            if(matrix[0][i] == 0){
                toprow = true;
                break;
            }
        }

        // checking left col
        for(int i = 0 ; i<m ; i++){
            if(matrix[i][0] == 0){
                leftcol = true;
                break;
            }
        }


        // now checking the entire left off matrix : 
        for(int i = 1 ; i<m ; i++){
            for(int j = 1; j<n ; j++){
                if(matrix[i][j] == 0){
                    matrix[i][0] = 0 ;
                    matrix[0][j] = 0 ;
                }
            }
        }



        // now replacing the rows to 0 : 
        for(int i = 1 ; i < m ; i++){
            if(matrix[i][0] == 0){
                for(int j = 1 ; j<n ; j++){
                    matrix[i][j] = 0;
                }
            }
        }

        // now replacing the cols to 0 : 
        for(int i = 1 ; i < n ; i++){
            if(matrix[0][i] == 0){
                for(int j = 1 ; j<m ; j++){
                    matrix[j][i] = 0;
                }
            }
        }


        // now the top row and left col : 
        if(toprow){
            for(int i = 0 ; i<n ; i++){
                matrix[0][i] = 0;
            }
        }
        if(leftcol){
            for(int i = 0 ; i<m ; i++){
                matrix[i][0] = 0 ;
            }
        }
    }
};
